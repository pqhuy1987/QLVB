                                            @if (Model.LoaiTinTuc != null)
                                            {
                                                <i class="text-danger fa fa-vine"></i><a href="@Url.Action("TaiVanBan", "TrangChinh", new { @id = Model.LoaiTinTuc, @ng = "/Upload/fileDOCTV/" + Model.LoaiTinTuc })"> TẢI BẢN TIẾNG VIỆT</a>
                                            }
                                        </th>
                                        <th class="text-center">
                                            @if (Model.LoaiTinTuc != null)
                                            {
                                                <i class="text-danger fa fa-font"></i><a href="@Url.Action("TaiVanBan", "TrangChinh", new { @id = Model.LoaiTinTuc, @ng = "/Upload/fileDOCTA/" + Model.LoaiTinTuc })">TẢI BẢN TIẾNG ANH</a>
                                            }
