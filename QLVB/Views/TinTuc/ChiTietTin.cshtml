                                                                </div>
                                                            }

                                                            @if (lstBinhLuan.Where(n => n.MaBinhLuanCha == item.Id).Count() > 0)
                                                            {
                                                                <a id='hien-binhluan'>Hiển thị @lstBinhLuan.Where(n => n.MaBinhLuanCha == item.Id).Count() trả lời</a>;
                                                            }
                                                            <div style="margin-bottom:10px"></div>
                                                        </div>

                                                        <div class="div-traloi-binhluan" style="margin-bottom:10px;display:none;">

                                                            <img width="40" src="~/Upload/Avatar/images.png" />
                                                            <textarea type="text" data-macha="@item.Id" class="txt-traloi-binhluan" placeholder="Viết bình luận của bạn..."></textarea>
                                                        </div>
                                                    </div>

                                                </div>
                                            }
                                            @Html.Raw(sTheA)
                                        </div>

                                    </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" role="tabpanel" id="taive" aria-labelledby="profile-tab">
                            <div class="container table-responsive">
                                <table class="table table-bordered table-striped ">
                                    <tr>
                                        <th colspan="3">
                                            @Model.LoaiTinTuc
                                        </th>
                                    </tr>
                                    <tr>
                                        <th class="text-center">
                                            @if (Model.LoaiTinTuc != null)
                                            {
                                                <i class="text-danger fa fa-file-pdf-o"></i><a href="@Url.Action("TaiVanBan", "TrangChinh", new { @id = Model.LoaiTinTuc, @ng = "/Upload/filePDF/" + Model.LoaiTinTuc })"> TẢI BẢN PDF</a>
                                            }
