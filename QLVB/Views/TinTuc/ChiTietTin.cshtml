                                                                    </div>
                                                                    @if (itemcon.IdNhanVien == nv.Id)
                                                                    {
                                                                        <i class="fa fa-pencil btn-suaBL" data-macha="@itemcon.Id"></i>
                                                                    }
                                                                    @if (itemcon.IdNhanVien == nv.Id || HttpContext.Current.User.IsInRole("XOA-CM"))
                                                                    {
