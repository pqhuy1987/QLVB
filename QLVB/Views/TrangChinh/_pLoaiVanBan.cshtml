@{
    QLVB.Models.QuanLyVanBanEntities db = new QLVB.Models.QuanLyVanBanEntities();
    
    IEnumerable<QLVB.Models.LoaiTaiLieu> lstLoaiVanBan = ViewBag.LVB;
    IEnumerable<QLVB.Models.TaiLieu> lstTaiLieu = ViewBag.VB;
}
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-book"></i> CÔNG TRƯỜNG <span class="caret"></span></a>
    <ul class="dropdown-menu">
        @foreach (var item in lstLoaiVanBan)
        {
            <li><a href="@Url.Action("Index", "TrangChinh", new {LoaiVanBan=item.MaLoaiTL })">@item.TenLoaiTL <span class="text-danger">(@lstTaiLieu.Where(n => n.LoaiVanBan == item.MaLoaiTL).Count())</span></a></li>
        }

    </ul>
</li>