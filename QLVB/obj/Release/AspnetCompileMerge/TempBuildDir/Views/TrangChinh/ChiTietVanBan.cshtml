<script>
    $('.sub').each(function () {
        $(this).find('.subHL').find('#CTNoiDung').html($(this).find('.subHL').find('#CTNoiDung').text());
        $(this).attr("title", $(this).find('.subHL').find('#CTTieuDe').text());
        $(this).attr("data-toggle", "tooltip");
    });

    // xu ly ghi chu highlight
    $('.sub').click(function () {
        $('#div_shadow').show();
        $(this).find('.subHL').show();
    });

    $('#div_shadow').click(function () {
        $(this).hide();
        $('.subHL').hide();
    });

    $('#btn-div-shadow').click(function () {

    });

    $('body').delegate('.CTclose', 'click', function () {
        $('#div_shadow').hide();
        $('.subHL').hide();
    });

    $('.timkiem-btn').click(function () {
        $('.timkiem-load').slideToggle();
        $('.ic-ud').toggle();
        $('.div-timkiem-input').slideToggle();
    }
    );

    $(function () {
        $('[data-toggle="tooltip"]').tooltip();
        $('[data-togg="tooltip"]').tooltip()
    })

    window.onload = function () {
        var url = document.location.toString();
        if (url.match('#')) {
            $('.nav-tabs a[href=\\#' + url.split('#')[1] + ']').tab('show');
        }
    }

    $('#btn-LuuGhiChu').click(function () {
        $("#loading_gif").show();
        $.ajax({
            type: 'POST',
            url: '/TrangChinh/GhiChu',
            data: { NoiDung: $('#NoiDungGhiChu').val(), MaVanBan: $('#MaVanBanGhiChu').val() },

            success: function (result) {
                $("#loading_gif").hide();
                $('#pthongbao').text('Lưu thành công');
                $('#btn-thongbao2').trigger('click');
            }
        });
    });

    $('#btn-LuuFB').click(function () {
        $("#loading_gif").show();
        $.ajax({
            type: 'POST',
            url: '/TrangChinh/GuiYKien',
            data: { HoTen: $('#fbHoTen').val(), Email: $('#fbEmail').val(), DienThoai: $('#fbDienThoai').val(), NoiDung: $('#fbNoiDung').val(), MaVanBan: $('#MaVanBanGhiChu').val() },

            success: function (result) {
                $("#loading_gif").hide();
                $('#pthongbao').text('Gửi ý kiến thành công');
                $('#btn-thongbao2').trigger('click');
            }
        });
    });
</script>

