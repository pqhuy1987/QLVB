<html lang="en">
 <!--<![endif]-->
<head>
    <link rel="shortcut icon" href="~/favicon.ico" />
    <meta charset="UTF-8">
    <meta name="viewport" content="initial-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Remove Tap Highlight on Windows Phone IE -->
    <meta name="msapplication-tap-highlight" content="no" />
    <link rel="icon" type="image/png" href="assets/img/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/png" href="assets/img/favicon-32x32.png" sizes="32x32">
    <title>Login</title>
        @Scripts.Render("~/bundles/jquery")
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Roboto:300,400,500' rel='stylesheet' type='text/css'>
    <!-- uikit -->
    <link rel="stylesheet" href="~/Content/Login/bower_components/uikit/css/uikit.almost-flat.min.css" />
    <!-- altair admin login page -->
    <link rel="stylesheet" href="~/Content/Login/assets/css/login_page.min.css" />
    <link href="../../Content/ThemeAdmin/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>
<body class="login_page">
    <div class="login_page_wrapper">
        <div class="md-card" id="login_card">
            <div class="md-card-content large-padding" id="login_form">
                <div class="login_heading">
                    <div class="user_avatar"></div>
                </div>
                @using (Html.BeginForm("DangNhap", "QuanTri", FormMethod.Post))
                    {
                    <div class="uk-form-row">
                        <label for="login_username">Tên đăng nhập</label>
                        <input class="md-input" type="text" id="login_username" name="TenDangNhap" />
                    </div>
                    <div class="uk-form-row">
                        <label for="login_password">Mật khẩu</label>
                        <input class="md-input" type="password" id="login_password" name="MatKhau" />
                    </div>
                    <div class="uk-margin-medium-top">
                        <input type="submit" class="md-btn md-btn-primary md-btn-block md-btn-large" value="Đăng nhập" />
                    </div>
                }
            </div>
          
           
        </div>
    </div>

    
    <div id="div-thongbao" style="display: none; background-color: darkred">
        <p id="div-pthongbao"></p>
    </div>
    @Html.Raw(TempData["ThongBao"])
    <!-- common functions -->
    <script src="~/Content/Login/assets/js/common.min.js"></script>
    <!-- altair core functions -->
    <script src="~/Content/Login/assets/js/altair_admin_common.min.js"></script>
    <!-- altair login page functions -->
    <script src="~/Content/Login/assets/js/pages/login.min.js"></script>
</body>
</html>
